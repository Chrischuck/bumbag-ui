{
  "extends": ["@medipass/react-medipass"],
  "plugins": ["@emotion"],
  "rules": {
    "react/jsx-pascal-case": 0,
    "react/default-props-match-prop-types": 0,
    "jsx-a11y/href-no-hash": 0,
    "react/jsx-handler-names": 0,
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "printWidth": 120,
        "singleQuote": true
      }
    ],
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["typescript"],
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off"
      }
    }
  ]
}
